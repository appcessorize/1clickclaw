<!DOCTYPE html>
<html lang="en" data-theme="light" data-controller="theme">
  <head>
    <title><%= content_for(:title) || "Admin - ClawSaaS" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="robots" content="noindex,nofollow">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="icon" href="/icon.png" type="image/png">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body class="min-h-screen bg-base-200">
    <div class="drawer lg:drawer-open">
      <input id="admin-drawer" type="checkbox" class="drawer-toggle" />

      <div class="drawer-content flex flex-col">
        <!-- Navbar -->
        <div class="navbar bg-base-100 shadow-sm lg:hidden">
          <div class="flex-none">
            <label for="admin-drawer" class="btn btn-square btn-ghost drawer-button">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </label>
          </div>
          <div class="flex-1">
            <span class="text-xl font-bold">Admin Panel</span>
          </div>
        </div>

        <!-- Page content -->
        <main class="flex-1 p-6">
          <%= render "shared/flash" %>
          <%= yield %>
        </main>
      </div>

      <!-- Sidebar -->
      <div class="drawer-side">
        <label for="admin-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
        <aside class="bg-base-100 w-64 min-h-screen">
          <div class="p-4 border-b border-base-200">
            <%= link_to admin_root_path, class: "text-xl font-bold text-primary" do %>
              ClawSaaS Admin
            <% end %>
          </div>

          <ul class="menu p-4 w-full">
            <li>
              <%= link_to admin_root_path, class: "flex items-center gap-3 #{'active' if controller_name == 'dashboard'}" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                Dashboard
              <% end %>
            </li>
            <li>
              <%= link_to admin_users_path, class: "flex items-center gap-3 #{'active' if controller_name == 'users'}" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                Users
              <% end %>
            </li>

            <li class="menu-title mt-4">
              <span>Quick Links</span>
            </li>
            <li>
              <%= link_to root_path, class: "flex items-center gap-3" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                </svg>
                View Site
              <% end %>
            </li>
            <li>
              <%= link_to dashboard_path, class: "flex items-center gap-3" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                My Dashboard
              <% end %>
            </li>
          </ul>

          <!-- User info at bottom -->
          <div class="absolute bottom-0 w-full p-4 border-t border-base-200">
            <div class="flex items-center gap-3">
              <div class="avatar placeholder">
                <div class="bg-primary text-primary-content w-10 rounded-full">
                  <span><%= current_user.display_name.first.upcase %></span>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <p class="font-medium truncate"><%= current_user.display_name %></p>
                <p class="text-xs text-base-content/70 truncate"><%= current_user.email %></p>
              </div>
              <%= button_to destroy_user_session_path, method: :delete, class: "btn btn-ghost btn-sm btn-circle" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
              <% end %>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </body>
</html>
